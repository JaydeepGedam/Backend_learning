<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-zinc-800 text-white">
    <form action="/add" method="POST" class="max-w-2xl mx-auto p-4">
        <input type="text" name="title" placeholder="Enter title here"
            class="w-full p-2 rounded bg-zinc-700 text-white outline-none" required>
        <textarea name="description" placeholder="Enter description here"
            class="w-full p-2 mt-2 rounded bg-zinc-700 text-white outline-none" required></textarea>
        <button type="submit" class="mt-2 px-4 py-2 bg-blue-600 rounded">Add Task</button>
    </form>
    <div class="max-w-2xl mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Tasks</h1>
        <ul class="space-y-4">
            <% if (tasks && tasks.length > 0) { %>
                <% tasks.forEach(task => { %>
                    <li class="bg-zinc-700 p-4 rounded">
                        <h2 class="text-xl font-semibold"><%= task.title %></h2>
                        <p><%= task.description %></p>
                        <a href="/files/<%= task.title %>.txt" class="text-blue-400 underline">View File</a>
                        <a href="/edit/<%= task.title %>" class="text-blue-400 underline">Edit</a>
                    </li>
                <% }) %>
            <% } else { %>
                <li class="text-zinc-400">No tasks yet.</li>
            <% } %>
        </ul>
    </div>
</body>
</html>